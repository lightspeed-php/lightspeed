{
    "name": "lightspeedphp/lightspeed",
    "description": "Run tests faster by splitting them across nodes.",
    "keywords": [
        "php",
        "framework",
        "test",
        "testing",
        "pest",
        "unit"
    ],
    "license": "BSD-4-Clause",
    "authors": [
        {
            "name": "Jarryd Tilbrook",
            "email": "jarryd@tilbrooktech.com"
        }
    ],
    "require": {
        "php": "^7.3 || ^8.0",
        "phpunit/phpunit": "^9.5",
        "symfony/polyfill-php80": "^1.28",
        "symfony/process": "^5.0 || ^6.0"
    },
    "autoload": {
        "psr-4": {
            "Lightspeed\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Lightspeed\\LightspeedServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "bin": [
        "bin/lightspeed"
    ],
    "require-dev": {
        "illuminate/support": "^9.0",
        "nunomaduro/collision": "^7.9",
        "orchestra/testbench": "^7.32"
    }
}
